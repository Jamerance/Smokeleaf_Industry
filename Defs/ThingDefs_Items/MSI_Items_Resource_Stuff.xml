<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--========== Hemp ==========-->

  <ThingDef ParentName="MSI_ResourceBase">
    <defName>HempFabric</defName>
    <label>hemp fabric</label>
    <description>Fabric woven from hemp fibers.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Cloth</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <color>(138,139,108)</color>
    </graphicData>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <MarketValue>5.0</MarketValue>
      <Mass>0.05</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>8</DeteriorationRate>
    </statBases>
    <stuffProps>
      <categories>
        <li>Fabric</li>
      </categories>
      <color>(138,139,108)</color>
      <commonality>1.4</commonality>
	  <statOffsets>
        <ArmorRating_Blunt>0.05</ArmorRating_Blunt>
        <ArmorRating_Sharp>0.05</ArmorRating_Sharp>
        <ArmorRating_Heat>0.1</ArmorRating_Heat>
        <ArmorRating_Electric>0.05</ArmorRating_Electric>
      </statOffsets>
      <statFactors>
        <WorkToMake>1.3</WorkToMake>
        <ArmorRating_Blunt>1.5</ArmorRating_Blunt>
        <ArmorRating_Sharp>2</ArmorRating_Sharp>
        <ArmorRating_Heat>1.5</ArmorRating_Heat>
        <ArmorRating_Electric>2.5</ArmorRating_Electric>
		<Insulation_Cold>2</Insulation_Cold>
        <Insulation_Heat>2</Insulation_Heat>
	  </statFactors>	
    </stuffProps>
    <thingCategories>
      <li>Textiles</li>
    </thingCategories>
  </ThingDef>
  
    <!--========== Hemp Fiber ==========-->
	
	<ThingDef ParentName="MSI_ResourceBase">
    <defName>HempFiber</defName>
    <label>hemp fibers</label>
    <description>Leftover stalks and leaves from trimming the smokeleaf plant.</description>
    <graphicData>
      <texPath>Things/Items/MSI_hemp</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <MarketValue>1.0</MarketValue>
      <Mass>0.1</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>12</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>PlantMatter</li>
    </thingCategories>
  </ThingDef>
  
	<!--========== Smokeleaf Buds ==========-->
  
  <ThingDef ParentName="MSI_OrganicProductBase">
    <defName>SmokeleafBuds</defName>
    <label>smokeleaf buds</label>
    <description>The flower of the smokeleaf plant. Contains all the good stuff.</description>
    <graphicData>
      <texPath>Things/Items/MSI_bud</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <MarketValue>3.5</MarketValue>
      <Mass>0.03</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>8</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>PlantMatter</li>
    </thingCategories>
  </ThingDef>
  
  <!--========== Smokeleaf Seeds ==========-->
  
  <ThingDef ParentName="MSI_OrganicProductBase">
    <defName>SmokeleafSeed</defName>
    <label>smokeleaf seed</label>
    <description>The seed of the smokeleaf plant.</description>
    <graphicData>
      <texPath>Things/Items/MSI_seed</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>1.0</MarketValue>
      <Flammability>0.5</Flammability>
    </statBases>
    <thingCategories>
      <li>PlantMatter</li>
    </thingCategories>
  </ThingDef>
  
  <!--========== Hemp Flour ==========-->
  
  <ThingDef ParentName="MSI_PlantFoodRawBase">
    <defName>HempFlour</defName>
    <label>hemp flour</label>
    <description>Smokeleaf seeds can be ground into a fine flour for baking.</description>
    <graphicData>
      <texPath>Things/Items/MSI_flour</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>2.5</MarketValue>
      <Flammability>1.0</Flammability>
    </statBases>
	<ingestible>
      <foodType>Plant, Processed</foodType>
	  <nutrition>0.2</nutrition>
    </ingestible>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>120</daysToRotStart>
		<rotDestroys>true</rotDestroys>
      </li>
    </comps>
  </ThingDef>
  
    <!--========== Hempoline ==========-->
	
  <ThingDef ParentName="MSI_OrganicProductBase">
    <defName>Hempoline</defName>
    <label>hempoline</label>
    <description>A safe, stable fuel produced from refined smokeleaf stalks or seeds. Non-volatile, but goes bad eventually.</description>
    <graphicData>
      <texPath>Things/Items/MSI_hempoline</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <stackLimit>400</stackLimit>
	<deepCommonality>2</deepCommonality>
	<deepCountPerCell>300</deepCountPerCell>
	<statBases>
		<MaxHitPoints>50</MaxHitPoints>
		<MarketValue>8</MarketValue>
		<Mass>0.05</Mass>
		<DeteriorationRate>1.0</DeteriorationRate>
	</statBases>
	<comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>120</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
  </ThingDef>
  
  <!--========== CBD ==========-->
	  
  <ThingDef ParentName="MSI_ResourceBase">
    <defName>CBD</defName>
    <label>CBD</label>
    <description>A compound identified in the smokeleaf plant that has vast medical potential. CBD can be used on it's own or combined with other medicine to create an even more effective form of treatment.</description>
	<thingClass>Medicine</thingClass>
    <graphicData>
      <texPath>Things/Items/MSI_CBD</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <statBases>
      <MaxHitPoints>30</MaxHitPoints>
      <MarketValue>30</MarketValue>
      <Mass>0.5</Mass>
      <Flammability>1.0</Flammability>
      <MedicalPotency>0.75</MedicalPotency>
      <DeteriorationRate>6</DeteriorationRate>
      <WorkToMake>1000</WorkToMake>
    </statBases>
    <thingCategories>
      <li>Medicine</li>
    </thingCategories>
    <costList>
      <SmokeleafBuds>15</SmokeleafBuds>
    </costList>
    <recipeMaker>
      <workSpeedStat>DrugProductionSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <recipeUsers>
		<li>MedicinalsLab</li>
      </recipeUsers>
      <researchPrerequisite>SmokeleafPharmacology</researchPrerequisite>
      <skillRequirements>
        <li>
          <skill>Crafting</skill>
          <minLevel>10</minLevel>
        </li>
		<li>
          <skill>Medicine</skill>
          <minLevel>6</minLevel>
        </li>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>
  
  <!--========== Infused Meal ==========--> 
	  
  <ThingDef ParentName="MSI_MealRottable">
    <defName>MealInfused</defName>
    <label>infused meal</label>
    <description>A filling meal that also gives a slight buzz.</description>
    <graphicData>
      <texPath>Things/Items/MSI_meal</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>27</MarketValue>
      <WorkToMake>450</WorkToMake>
    </statBases>
    <ingestible>
      <preferability>MealFine</preferability>
	  <tasteThought>AteFineMeal</tasteThought>
	  <nutrition>0.95</nutrition>
	  <joy>0.8</joy>
      <joyKind>Chemical</joyKind>	  
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>Meal_Eat</ingestSound>
	  <outcomeDoers>
	    <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>InfusedBuzz</hediffDef>
          <severity>0.5</severity>
        </li>
	  </outcomeDoers>
    </ingestible>
  </ThingDef> 
  
  <!--========== Infused Medicine ==========-->  

  <ThingDef ParentName="MSI_ResourceBase">
    <defName>InfusedMedicine</defName>
    <label>infused medicine</label>
    <description>Medicine infused with CBD. More effective than regular medicine.</description>
    <thingClass>Medicine</thingClass>
    <graphicData>
      <texPath>Things/Items/MSI_medicine</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <MarketValue>50</MarketValue>
      <Mass>0.5</Mass>
      <Flammability>1.0</Flammability>
      <MedicalPotency>1.50</MedicalPotency>
      <DeteriorationRate>6</DeteriorationRate>
      <WorkToMake>750</WorkToMake>
    </statBases>
    <thingCategories>
      <li>Medicine</li>
    </thingCategories>
    <costList>
      <Medicine>1</Medicine>
	  <CBD>1</CBD>
    </costList>
    <recipeMaker>
      <workSpeedStat>DrugProductionSpeed</workSpeedStat>
      <workSkill>Medicine</workSkill>
      <recipeUsers>
        <li>DrugLab</li>
		<li>MedicinalsLab</li>
      </recipeUsers>
      <researchPrerequisite>SmokeleafPharmacology</researchPrerequisite>
      <skillRequirements>
	  <li>
          <skill>Crafting</skill>
          <minLevel>12</minLevel>
        </li>
        <li>
          <skill>Medicine</skill>
          <minLevel>8</minLevel>
        </li>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>  
	  
</Defs>