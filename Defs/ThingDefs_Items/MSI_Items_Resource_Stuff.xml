<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--=== Hemp ===-->

  <ThingDef ParentName="MSI_ResourceBase">
    <defName>HempFabric</defName>
    <label>hemp fabric</label>
    <description>Fabric woven from hemp fibers.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Cloth</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <color>(138,139,108)</color>
    </graphicData>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <MarketValue>3.0</MarketValue>
      <Mass>0.05</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>8</DeteriorationRate>
    </statBases>
    <stuffProps>
      <categories>
        <li>Fabric</li>
      </categories>
      <color>(138,139,108)</color>
      <commonality>1.4</commonality>
	  <statOffsets>
        <ArmorRating_Blunt>0.05</ArmorRating_Blunt>
        <ArmorRating_Sharp>0.05</ArmorRating_Sharp>
        <ArmorRating_Heat>0.1</ArmorRating_Heat>
        <ArmorRating_Electric>0.05</ArmorRating_Electric>
      </statOffsets>
      <statFactors>
        <WorkToMake>1.3</WorkToMake>
        <ArmorRating_Blunt>1.5</ArmorRating_Blunt>
        <ArmorRating_Sharp>2</ArmorRating_Sharp>
        <ArmorRating_Heat>1.5</ArmorRating_Heat>
        <ArmorRating_Electric>2.5</ArmorRating_Electric>
		<Insulation_Cold>2</Insulation_Cold>
        <Insulation_Heat>2</Insulation_Heat>
	  </statFactors>	
    </stuffProps>
    <thingCategories>
      <li>Textiles</li>
    </thingCategories>
  </ThingDef>
  
    <!--=== Hemp Fiber ===-->
	
	<ThingDef ParentName="MSI_ResourceBase">
    <defName>HempFiber</defName>
    <label>hemp fibers</label>
    <description>Leftover stalks and leaves from processing the smokeleaf plant.</description>
    <graphicData>
      <texPath>Things/Items/MSI_hemp</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <MarketValue>1.0</MarketValue>
      <Mass>0.1</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>12</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>Plant, Processed</li>
    </thingCategories>
  </ThingDef>
  
	<!--=== Smokeleaf Buds ===-->
  
  <ThingDef ParentName="MSI_OrganicProductBase">
    <defName>SmokeleafBuds</defName>
    <label>smokeleaf buds</label>
    <description>The flower of the smokeleaf plant. Contains all the good stuff.</description>
    <graphicData>
      <texPath>Things/Items/MSI_bud</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <MarketValue>3.5</MarketValue>
      <Mass>0.03</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>8</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>PlantMatter</li>
    </thingCategories>
  </ThingDef>
  
	<!--=== Smokeleaf Butter ===-->
  
  <ThingDef ParentName="MSI_OrganicProductBase">
    <defName>SmokeleafButter</defName>
    <label>smokeleaf butter</label>
    <description>The flower of the smokeleaf plant simmered with milk. Creates a potent base for edibles.</description>
    <graphicData>
      <texPath>Things/Items/MSI_butter</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>5.0</MarketValue>
      <Flammability>0.25</Flammability>
    </statBases>
    <thingCategories>
      <li>Foods</li>
    </thingCategories>
  </ThingDef>
  
  <!--=== Smokeleaf Seeds ===-->
  
  <ThingDef ParentName="MSI_OrganicProductBase">
    <defName>SmokeleafSeed</defName>
    <label>smokeleaf seed</label>
    <description>The seed of the smokeleaf plant.</description>
    <graphicData>
      <texPath>Things/Items/MSI_seed</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>1.0</MarketValue>
      <Flammability>0.5</Flammability>
    </statBases>
    <thingCategories>
      <li>PlantMatter</li>
    </thingCategories>
  </ThingDef>
  
  <!--=== Hemp Flour ===-->
  
  <ThingDef ParentName="MSI_PlantFoodRawBase">
    <defName>HempFlour</defName>
    <label>hemp flour</label>
    <description>The seed of the smokeleaf plant can be processed into a flour for baking.</description>
    <graphicData>
      <texPath>Things/Items/MSI_flour</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>2.5</MarketValue>
      <Flammability>1.0</Flammability>
    </statBases>
	<ingestible>
      <foodType>Plant, Processed</foodType>
	  <nutrition>0.15</nutrition>
    </ingestible>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>120</daysToRotStart>
		<rotDestroys>true</rotDestroys>
      </li>
    </comps>
  </ThingDef>
  
    <!--=== Hempoline ===-->
	
  <ThingDef ParentName="MSI_OrganicProductBase">
    <defName>Hempoline</defName>
    <label>hempoline</label>
    <description>A safe, stable fuel produced from refined smokeleaf stalks. Non-volatile, but goes bad eventually.</description>
    <graphicData>
      <texPath>Things/Items/MSI_hempoline</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <stackLimit>400</stackLimit>
	<deepCommonality>2</deepCommonality>
	<deepCountPerCell>300</deepCountPerCell>
	<statBases>
		<MaxHitPoints>50</MaxHitPoints>
		<MarketValue>8</MarketValue>
		<Mass>0.05</Mass>
		<DeteriorationRate>1.0</DeteriorationRate>
	</statBases>
	<comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>120</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
  </ThingDef>
  
    <!--=== CBD ===-->
	  
  <ThingDef ParentName="MSI_OrganicProductBase">
    <defName>CBD</defName>
    <label>CBD</label>
    <description>A new compound identified in the smokeleaf plant that has vast medical potential.  Similar to neutroamine, it is useless on its own, but can be combined with other ingredients to make other drugs.</description>
    <graphicData>
      <texPath>Things/Items/MSI_CBD</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>10</MarketValue>
      <Flammability>0.5</Flammability>
    </statBases>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
  </ThingDef>
  
  <!--=== Infused Meal ===--> 
	  
  <ThingDef ParentName="MSI_MealRottable">
    <defName>MealInfused</defName>
    <label>infused meal</label>
    <description>A filling dish that also gives a slight buzz.</description>
    <graphicData>
      <texPath>Things/Items/MSI_meal</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>27</MarketValue>
      <WorkToMake>450</WorkToMake>
    </statBases>
    <ingestible>
      <preferability>MealFine</preferability>
	  <tasteThought>AteFineMeal</tasteThought>
	  <nutrition>0.95</nutrition>
	  <joy>0.8</joy>
      <joyKind>Chemical</joyKind>	  
      <ingestEffect>EatVegetarian</ingestEffect>
      <ingestSound>Meal_Eat</ingestSound>
	  <outcomeDoers>
	    <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>InfusedBuzz</hediffDef>
          <severity>0.5</severity>
        </li>
	  </outcomeDoers>
    </ingestible>
  </ThingDef>  
	  
</Defs>