<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--=== Bases ===-->

  <ThingDef ParentName="MSI_ResourceBase" Name="MSI_BlocksBase" Abstract="True">
    <description>Blocks made of hemp. Useful for building simple structures.</description>
	<graphicData>
      <texPath>Things/Items/MSI_blocks</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	</graphicData>  
    <soundInteract>Stone_Drop</soundInteract>
    <soundDrop>Stone_Drop</soundDrop>
    <useHitPoints>false</useHitPoints>
    <statBases>
	  <MaxHitPoints>100</MaxHitPoints>
      <MarketValue>1.9</MarketValue>
      <SharpDamageMultiplier>0.6</SharpDamageMultiplier>
      <BluntDamageMultiplier>1.0</BluntDamageMultiplier>
	  <Beauty>-6</Beauty>
	</statBases>
    <thingCategories>
      <li>StoneBlocks</li>
    </thingCategories>
    <stuffProps>
      <categories>
        <li>Stony</li>
      </categories>
      <commonality>0.20</commonality> <!-- because there are so many stone types -->
      <appearance>Bricks</appearance>
      <statOffsets>
        <WorkToBuild>140</WorkToBuild>
      </statOffsets>
      <statFactors>
        <MarketValue>0.5</MarketValue>
        <MaxHitPoints>0.8</MaxHitPoints>
        <Flammability>0</Flammability>
        <WorkToBuild>6.0</WorkToBuild>
		<WorkToMake>1.3</WorkToMake>
        <DoorOpenSpeed>1.25</DoorOpenSpeed>
        <BedRestEffectiveness>1.0</BedRestEffectiveness>
        <MeleeWeapon_Cooldown>1.35</MeleeWeapon_Cooldown>
      </statFactors>
    </stuffProps>
  </ThingDef>

	<!--=== Hempcrete ===-->
  
  <ThingDef ParentName="MSI_BlocksBase">
    <defName>BlocksHempcrete</defName>
    <label>hempcrete blocks</label>
    <description>Blocks made of a hemp composite. Hempcrete is not flammable, but it's not very strong either.</description>
    <statBases>
      <MarketValue>2.0</MarketValue>
      <Mass>1</Mass>
      <SharpDamageMultiplier>0.5</SharpDamageMultiplier>
    </statBases>
    <stuffProps>
	  <color>(138,139,108)</color>
      <soundImpactStuff>BulletImpactGround</soundImpactStuff>
      <soundMeleeHitSharp>MeleeHit_Stone</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Stone</soundMeleeHitBlunt>
      <stuffAdjective>hempcrete</stuffAdjective>
      <statFactors>
        <Beauty>1.0</Beauty>  
        <MarketValue>0.4</MarketValue>
        <MaxHitPoints>1.1</MaxHitPoints>
		<WorkToBuild>5.0</WorkToBuild>
		<WorkToMake>1.1</WorkToMake>
      </statFactors>
    </stuffProps>
  </ThingDef>

</Defs>