<?xml version="1.0" encoding="utf-8" ?>
<SmokeleafKief>

  <ThingDef ParentName="MSI_MakeableDrugBase">
    <defName>SmokeleafKief</defName>
    <label>smokeleaf kief</label>
    <description>Smokeleaf kief is the crystals that form on the buds. The kief is seperated from the bud mechanically. It is slightly stronger than a joint. The drug improves mood, but also increases appetite, reduces focus and slows movement.</description>
    <graphicData>
      <texPath>Things/Items/MSI_kief</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>450</WorkToMake>
      <MarketValue>20</MarketValue>
      <Mass>0.05</Mass>
    </statBases>
    <techLevel>Industrial</techLevel>
    <ingestible>
	  <foodType>Plant, Processed</foodType>
      <joy>0.85</joy>
      <ingestHoldOffsetStanding>
        <northDefault>
          <offset>(0.27,0,0.08)</offset>
          <behind>true</behind>
        </northDefault>
        <east>
          <offset>(0.45,0,0.08)</offset>
        </east>
        <south>
          <offset>(0.27,0,0.08)</offset>
        </south>
        <west>
          <offset>(-0.50,0,0.08)</offset>
          <flip>false</flip>
        </west>
      </ingestHoldOffsetStanding>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>KiefHigh</hediffDef>
          <severity>0.5</severity>
          <toleranceChemical>Kief</toleranceChemical>
        </li>
        <li Class="IngestionOutcomeDoer_OffsetNeed">
          <need>Rest</need>
          <offset>-0.15</offset>
        </li>
        <li Class="IngestionOutcomeDoer_GiveHediff">
			<hediffDef>KiefTolerance</hediffDef>
			<severity>0.03</severity>
			<divideByBodySize>true</divideByBodySize>
		</li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
	  <researchPrerequisite>IndustrialSmokeleafCultivation</researchPrerequisite>
	  <recipeUsers>
        <li>PoweredCultivationBench</li>
      </recipeUsers>
	  <workSpeedStat>DrugProductionSpeed</workSpeedStat>
	  <workSkill>Crafting</workSkill>
	  <skillRequirements>
			<li>
				<skill>Crafting</skill>
				<minLevel>3</minLevel>
			</li>
	  </skillRequirements>
    </recipeMaker>
    <costList>
      <SmokeleafBuds>4</SmokeleafBuds>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <chemical>Kief</chemical>
        <addictiveness>0.2</addictiveness>
        <minToleranceToAddict>0.15</minToleranceToAddict>
        <existingAddictionSeverityOffset>0.06</existingAddictionSeverityOffset>
        <needLevelOffset>1</needLevelOffset>
        <listOrder>20</listOrder>
      </li>
    </comps>
  </ThingDef>

  <HediffDef>
    <defName>KiefHigh</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>high on kief</label>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <scenarioCanAdd>true</scenarioCanAdd>
    <maxSeverity>1.0</maxSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1.05</severityPerDay>
      </li>
    </comps>
      <stages>
        <li>
          <hungerRateFactor>1.3</hungerRateFactor>
          <painOffset>-0.25</painOffset>
          <capMods>
            <li>
              <capacity>Consciousness</capacity>
              <offset>-0.35</offset>
            </li>
            <li>
              <capacity>Moving</capacity>
              <offset>-0.15</offset>
            </li>
          </capMods>
        </li>
      </stages>
  </HediffDef>
  
  <ThoughtDef>
    <defName>KiefHigh</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>KiefHigh</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>high on kief</label>
        <description>Why haven't we figured this stuff out til now?</description>
        <baseMoodEffect>18</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!--=== Kief addiction ===-->

  <ChemicalDef>
    <defName>Kief</defName>
    <label>kief</label>
    <addictionHediff>KiefAddiction</addictionHediff>
    <toleranceHediff>KiefTolerance</toleranceHediff>
		<onGeneratedAddictedToleranceChance>0.8</onGeneratedAddictedToleranceChance>
	</ChemicalDef>

  <NeedDef ParentName="MSI_DrugAddictionNeedBase">
    <defName>Chemical_Kief</defName>
    <needClass>Need_Chemical</needClass>
    <label>kief</label>
    <description>Because of a developed kief dependence, this person needs to regularly consume the drug to avoid withdrawal symptoms.</description>
    <listPriority>25</listPriority>
  </NeedDef>
  
  <HediffDef ParentName="MSI_DrugToleranceBase">
    <defName>KiefTolerance</defName>
    <label>kief tolerance</label>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.02</severityPerDay>
      </li>
      <li Class="HediffCompProperties_DrugEffectFactor">
        <chemical>Hash</chemical>
      </li>
    </comps>
		<hediffGivers>
			<li Class="HediffGiver_RandomDrugEffect">
				<hediff>Asthma</hediff>
				<baseMtbDays>180</baseMtbDays>
				<minSeverity>0.5</minSeverity>
				<partsToAffect>
					<li>LeftLung</li>
					<li>RightLung</li>
				</partsToAffect>
				<countToAffect>2</countToAffect>
			</li>
			<li Class="HediffGiver_RandomDrugEffect">
				<hediff>Carcinoma</hediff>
				<baseMtbDays>180</baseMtbDays>
				<minSeverity>0.40</minSeverity>
				<partsToAffect>
					<li>LeftLung</li>
					<li>RightLung</li>
				</partsToAffect>
				<countToAffect>1</countToAffect>
			</li>
		</hediffGivers>
	</HediffDef>

  <HediffDef ParentName="MSI_AddictionBase">
    <defName>KiefAddiction</defName>
    <hediffClass>Hediff_Addiction</hediffClass>
    <label>kief dependence</label>
    <causesNeed>Chemical_Kief</causesNeed>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.035</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
      </li>
      <li>
        <label>withdrawal</label>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.25</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.175</offset>
          </li>
        </capMods>
		<mentalStateGivers>
			<li>
				<mentalState>BingingFood</mentalState>
				<mtbDays>30</mtbDays>
			</li>
			<li>
				<mentalState>BingingDrugMajor</mentalState>
				<mtbDays>50</mtbDays>
			</li>
		</mentalStateGivers>
      </li>
    </stages>
  </HediffDef>

  <ThoughtDef>
    <defName>KiefWithdrawal</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>KiefAddiction</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <visible>false</visible>
      </li>
      <li>
        <label>kief withdrawal</label>
        <description>When is the next batch ready?</description>
        <baseMoodEffect>-20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</SmokeleafKief>