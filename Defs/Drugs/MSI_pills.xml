<?xml version="1.0" encoding="utf-8" ?>
<SmokeleafPills>

  <ThingDef ParentName="MSI_MakeableDrugPillBase">
    <defName>SmokeleafPills</defName>
    <label>smokeleaf pills</label>
    <description>A pill form medicinal that offers preventative treatment, aids in recovery and provides mild pain relief.  May cause drowsiness.</description>
    <graphicData>
      <texPath>Things/Items/MSI_pill</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <socialPropernessMatters>false</socialPropernessMatters>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>600</WorkToMake>
      <MarketValue>65</MarketValue>
      <Mass>0.005</Mass>
    </statBases>
    <techLevel>Spacer</techLevel>
    <ingestible>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>SmokeleafPillsHigh</hediffDef>
          <severity>1.0</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
	  <researchPrerequisite>SmokeleafPharmacology</researchPrerequisite>
      <recipeUsers>
        <li>MedicinalsLab</li>
      </recipeUsers>
	  <workSpeedStat>DrugProductionSpeed</workSpeedStat>
	  <workSkill>Crafting</workSkill>
	  <skillRequirements>
			<li>
				<skill>Crafting</skill>
				<minLevel>12</minLevel>
			</li>
	  </skillRequirements>
    </recipeMaker>
    <costList>
      <CBD>2</CBD>
	  <Neutroamine>1</Neutroamine>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>750</listOrder>
        <overdoseSeverityOffset>
          <min>0.08</min>
          <max>0.14</max>
        </overdoseSeverityOffset>
		<addictiveness>0</addictiveness>
      </li>
    </comps>
  </ThingDef>
  
  <HediffDef>
    <defName>SmokeleafPillsHigh</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>smokeleaf pill sedation</label>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <maxSeverity>1.0</maxSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1.0</severityPerDay>
      </li>
    </comps>
    <stages>
		<li>
			<makeImmuneTo>
				<li>Malaria</li>
				<li>Plague</li>
			</makeImmuneTo>
			<painOffset>-0.1</painOffset>
			<capMods>
				<li>
					<capacity>BloodFiltration</capacity>
					<offset>0.2</offset>
				</li>
				<li>
					<capacity>BloodPumping</capacity>
					<offset>0.2</offset>
				</li>
				<li>
					<capacity>Consciousness</capacity>
					<offset>-0.1</offset>
				</li>
          </capMods>
		</li>
    </stages>
  </HediffDef>
  
  <ThoughtDef>
    <defName>SmokeleafPillsBuzz</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>SmokeleafPillsHigh</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>took smokeleaf pills</label>
        <description>I feel much better.</description>
        <baseMoodEffect>10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
</SmokeleafPills>