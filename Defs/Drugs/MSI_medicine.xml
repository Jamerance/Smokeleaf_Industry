<?xml version="1.0" encoding="utf-8" ?>
<InfusedMedicine>

 <!--=== Infused Medicine ===-->  
  
  <ThingDef ParentName="MSI_MakeablePharma">
    <defName>InfusedMedicine</defName>
    <label>infused medicine</label>
    <description>Medicine infused with CBD. More effective than regular medicine and provides a mild feeling of euphoria.</description>
    <thingClass>Medicine</thingClass>
    <graphicData>
      <texPath>Things/Items/MSI_medicine</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <MarketValue>25</MarketValue>
      <Mass>0.5</Mass>
      <Flammability>1.0</Flammability>
      <MedicalPotency>1.50</MedicalPotency>
      <DeteriorationRate>6</DeteriorationRate>
      <WorkToMake>750</WorkToMake>
    </statBases>
    <thingCategories>
      <li>Medicine</li>
    </thingCategories>
    <costList>
      <HerbalMedicine>1</HerbalMedicine>
      <Neutroamine>1</Neutroamine>
      <CBD>1</CBD>
    </costList>
    <recipeMaker>
      <workSpeedStat>DrugProductionSpeed</workSpeedStat>
      <workSkill>Intellectual</workSkill>
      <recipeUsers>
        <li>DrugLab</li>
		<li>MedicinalsLab</li>
      </recipeUsers>
      <researchPrerequisite>SmokeleafPharmacology</researchPrerequisite>
      <skillRequirements>
        <li>
          <skill>Medicine</skill>
          <minLevel>8</minLevel>
        </li>
        <li>
          <skill>Crafting</skill>
          <minLevel>4</minLevel>
        </li>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>
  
	

  <ThingDef ParentName="MSI_MakeablePharma">
    <defName>SmokeleafLotion</defName>
    <label>smokeleaf lotion</label>
    <description>A topical lotion that can heal old scars, numb pain and restore some movement.</description>
    <graphicData>
      <texPath>Things/Items/MSI_lotion</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <socialPropernessMatters>false</socialPropernessMatters>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToMake>750</WorkToMake>
      <MarketValue>75</MarketValue>
      <Mass>0.005</Mass>
	  <MedicalPotency>0.25</MedicalPotency>
    </statBases>
    <techLevel>Spacer</techLevel>
    <ingestible>
	  <drugCategory>Medical</drugCategory>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_GiveHediff">
          <hediffDef>SmokeleafLotionHigh</hediffDef>
          <severity>1.0</severity>
        </li>
      </outcomeDoers>
    </ingestible>
    <recipeMaker>
	  <researchPrerequisite>SmokeleafPharmacology</researchPrerequisite>
      <recipeUsers>
        <li>MedicinalsLab</li>
      </recipeUsers>
    </recipeMaker>
    <costList>
      <CBD>2</CBD>
	  <Neutroamine>2</Neutroamine>
    </costList>
    <comps>
      <li Class="CompProperties_Drug">
        <listOrder>1000</listOrder>
        <overdoseSeverityOffset>
          <min>0.08</min>
          <max>0.14</max>
        </overdoseSeverityOffset>
      </li>
    </comps>
  </ThingDef>
  
  <HediffDef>
    <defName>SmokeleafLotionHigh</defName>
    <hediffClass>HediffWithComps</hediffClass>
    <label>smokeleaf lotion</label>
    <defaultLabelColor>(1,0,0.5)</defaultLabelColor>
    <maxSeverity>1.0</maxSeverity>
    <comps>
	  <li Class="HediffCompProperties_HealOldWounds" />
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.5</severityPerDay>
      </li>
    </comps>
    <stages>
        <li>
		  <painOffset>-0.15</painOffset>
		  <baseMoodEffect>5</baseMoodEffect>
		  <capMods>
            <li>
              <capacity>Manipulation</capacity>
              <offset>0.1</offset>
			</li>
			<li>
              <capacity>Moving</capacity>
              <offset>0.05</offset>
            </li>
          </capMods>
		</li>
    </stages>
  </HediffDef>
  
</SmokeleafLotion>