	<!--========== Base Smokeleaf Edibles ==========-->
	
  <RecipeDef ParentName="MSI_CookMealBase">
    <defName>BakeSmokeleafCookies</defName>
    <label>bake smokeleaf cookies</label>
    <description>Bake delicious "special" cookies.</description>
    <jobString>Baking cookies.</jobString>
    <workAmount>800</workAmount>
    <requiredGiverWorkType>Cooking</requiredGiverWorkType>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>SmokeleafButter</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>HempFlour</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <SmokeleafCookie>2</SmokeleafCookie>
    </products>
    <fixedIngredientFilter>
		<thingDefs>
            <li>SmokeleafButter</li>
			<li>HempFlour</li>
         </thingDefs>
      <disallowedSpecialFilters>
        <li>AllowRotten</li>
      </disallowedSpecialFilters>
    </fixedIngredientFilter>
    <researchPrerequisite>SmokeleafProcessing</researchPrerequisite>
	<skillRequirements>
        <li>
          <skill>Cooking</skill>
          <minLevel>5</minLevel>
        </li>
      </skillRequirements>
  </RecipeDef>	

