  <RecipeDef>
    <defName>BakeSmokeleafCookies</defName>
    <label>bake smokeleaf cookies</label>
    <description>Bake delicious "special" cookies.</description>
    <jobString>Baking cookies.</jobString>
    <workAmount>800</workAmount>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <requiredGiverWorkType>Cooking</requiredGiverWorkType>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>SmokeleafButter</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
	  <li>
        <filter>
          <thingDefs>
            <li>HempFlour</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <SmokeleafCookie>2</SmokeleafCookie>
    </products>
    <fixedIngredientFilter>
		<thingDefs>
            <li>SmokeleafButter</li>
			<li>HempFlour</li>
         </thingDefs>
      <disallowedSpecialFilters>
        <li>AllowRotten</li>
      </disallowedSpecialFilters>
    </fixedIngredientFilter>
    <workSkill>Cooking</workSkill>
    <researchPrerequisite>SmokeleafEdibles</researchPrerequisite>
	<skillRequirements>
        <li>
          <skill>Cooking</skill>
          <minLevel>3</minLevel>
        </li>
      </skillRequirements>
	<recipeUsers>
        <li>FueledStove</li>
		<li>ElectricStove</li>
     </recipeUsers>
  </RecipeDef>	

