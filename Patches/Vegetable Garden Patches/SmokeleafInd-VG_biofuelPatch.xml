<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	
  <!--========== Biofuel Recipe Changes ==========-->
  
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="ModCheck.isModLoaded">
				<modName>VGP Vegetable Garden</modName>
				<yourMod>Smokeleaf Industry</yourMod>
			</li>
            <li Class="ModCheck.FindFile">
                <modName>Smokeleaf Industry</modName>
                <file>MSI_Buildings_Power.xml</file>
            </li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName = "HempolineGenerator"]/comps/li[contains(@Class,'CompProperties_Refuelable')]/fuelFilter/thingDefs</xpath>
				<value>
					<li>VG_Biofuel</li>
				</value>
			</li>
		</operations>
	</Operation>
	
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
            <li Class="ModCheck.FindFile">
                <modName>VGP Vegetable Garden</modName>
                <file>Items_Resources.xml</file>
            </li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/RecipeDef[defName = "VG_MakeBiofuel"]/ingredients/li/count</xpath>
				<value>
					<count>1.25</count>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/RecipeDef[defName = "VG_MakeBiofuel"]/products/VG_Biofuel</xpath>
				<value>
					<VG_Biofuel>5</VG_Biofuel>
				</value>
			</li>
		</operations>
	</Operation>
	
	<Operation Class="PatchOperationSequence">
	    <success>Always</success> 
		<operations>
			<li Class="ModCheck.isModLoaded">
				<modName>VGP Vegetable Garden</modName>
				<yourMod>Smokeleaf Industry</yourMod>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs</xpath>
				<value>
					<RecipeDef>
						<defName>MSI-VG_MakeBiofuel</defName>
						<label>make biofuel from grains (bulk)</label>
						<description>Make a batch of biofuel by extracting biofuel from wheat, corn, or beans.</description>
						<jobString>Refining biofuel from organics.</jobString>
						<effectWorking>Cremate</effectWorking>
						<soundWorking>Recipe_Cremate</soundWorking>
						<workAmount>1000</workAmount>
						<workSkill>Intellectual</workSkill>
						<allowMixingIngredients>true</allowMixingIngredients>
						<ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
						<ingredients>
						  <li>
							<filter>
							  <thingDefs>
								<li>RawCorn</li>
								<li>Rawbean</li>
							  </thingDefs>
							</filter>
							<count>3.75</count>
						  </li>
						</ingredients>
						<fixedIngredientFilter>
						  <thingDefs>
							<li>RawCorn</li>
							<li>Rawbean</li>
						  </thingDefs>
						  <specialFiltersToDisallow>
							<li>AllowRotten</li>
						  </specialFiltersToDisallow>
						</fixedIngredientFilter>
						<products>
							<VG_Biofuel>15</VG_Biofuel>
						</products>
						<recipeUsers>
							 <li>Refinery</li>
						</recipeUsers>
					</RecipeDef>
				</value>
			</li>
		</operations>
	</Operation>

  <!--========== Remove Biofuel As Bench Fuel ==========-->
	
	<Operation Class="PatchOperationSequence">
	    <success>Always</success>
		<operations>
            <li Class="ModCheck.FindFile">
                <modName>VGP Garden Gourmet</modName>
                <file>Buildings_Production.xml</file>
            </li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName = "Oven"]/comps/li[contains(@Class,'CompProperties_Refuelable')]/fuelFilter/thingDefs</xpath>
					<value>
						<li>HempFiber</li>
					</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName = "HandCanningstove"]/comps/li[contains(@Class,'CompProperties_Refuelable')]/fuelFilter/thingDefs</xpath>
					<value>
						<li>HempFiber</li>
					</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName = "FueledCandyTable"]/comps/li[contains(@Class,'CompProperties_Refuelable')]/fuelFilter/thingDefs</xpath>
					<value>
						<li>HempFiber</li>
					</value>
			</li>
		</operations>
	</Operation>
	
</Patch>