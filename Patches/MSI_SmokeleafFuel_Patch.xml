			<thingDefs>
				<li>WoodLog</li>
				<li>HempFiber</li>
			</thingDefs>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>*/ThingDef[defName = "TorchLamp"]/comps/li[contains(@Class,'CompProperties_Refuelable')]/fuelFilter/thingDefs</xpath>
		<value>
			<thingDefs>
				<li>WoodLog</li>
				<li>HempFiber</li>
			</thingDefs>
		</value>
	</Operation>
	
</Patch>